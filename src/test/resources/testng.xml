<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" verbose="1">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <test name="User API Tests">
        <classes>
            <class name="com.apitest.tests.UserApiTests"/>
        </classes>
    </test>
    
    <test name="Hotel API Tests">
        <classes>
            <class name="com.apitest.tests.HotelApiTests"/>
        </classes>
    </test>
    
    <test name="Auth Endpoint Tests">
        <classes>
            <class name="com.apitest.tests.AuthEndpointTests"/>
        </classes>
    </test>
</suite>
